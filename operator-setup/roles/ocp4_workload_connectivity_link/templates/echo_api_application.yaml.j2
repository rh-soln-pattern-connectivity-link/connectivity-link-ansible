---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ ocp4_workload_connectivity_link_echo_api_application_name }}
  namespace: {{ ocp4_workload_connectivity_link_argocd_namespace }}
  finalizers:
    - resources-finalizer.argocd.argoproj.io/foreground
spec:
  destination:
    server: 'https://kubernetes.default.svc'
    namespace: {{ ocp4_workload_connectivity_link_echo_api_application_namespace }}
  project: {{ ocp4_workload_connectivity_link_gitops_infra_project }}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - ApplyOutOfSyncOnly=true
      - CreateNamespace=true
  source:
    repoURL: {{ ocp4_workload_connectivity_link_echo_api_gitops_repo }}
    targetRevision: {{ ocp4_workload_connectivity_link_echo_api_gitops_repo_tag }}
    path: {{ ocp4_workload_connectivity_link_echo_api_gitops_repo_path }}
    helm:
      values: |
        httpRoute:
          gateway:
            name: {{ ocp4_workload_connectivity_link_ingress_gateway_name }}
            namespace: {{ ocp4_workload_connectivity_link_ingress_gateway_application_namespace }}
          hostName: {{ ocp4_workload_connectivity_link_echo_api_http_route_host }}.globex.{{ ocp4_workload_connectivity_link_main_domain }}

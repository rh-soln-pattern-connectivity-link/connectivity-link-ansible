---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ ocp4_workload_connectivity_link_observability_worker_application_name }}
  namespace: {{ ocp4_workload_connectivity_link_argocd_namespace }}
spec:
  destination:
    server: 'https://kubernetes.default.svc'
    namespace: {{ ocp4_workload_connectivity_link_observability_worker_application_namespace }}
  project: {{ ocp4_workload_connectivity_link_gitops_infra_project }}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - ApplyOutOfSyncOnly=true
      - CreateNamespace=true
  source:
    repoURL: {{ ocp4_workload_connectivity_link_observability_worker_gitops_repo }}
    targetRevision: {{ ocp4_workload_connectivity_link_observability_worker_gitops_repo_tag }}
    path: {{ ocp4_workload_connectivity_link_observability_worker_gitops_repo_path }}
